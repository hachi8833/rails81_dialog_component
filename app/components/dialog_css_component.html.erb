<dialog id="<%= id %>" 
        class="dialog-component <%= options[:class] %>"
        aria-labelledby="<%= title_id %>" 
        aria-describedby="<%= description_id %>" 
        closedby="<%= closedby %>">
  <header class="dialog-component__header">
    <hgroup>
      <h2 id="<%= title_id %>" class="dialog-component__title"><%= title %></h2>
      <% if description %>
        <p id="<%= description_id %>" class="dialog-component__description"><%= description %></p>
      <% end %>
    </hgroup>
    <% if show_close_button %>
      <button type="button" 
              commandfor="<%= id %>" 
              command="close" 
              class="dialog-component__close-button"
              aria-label="ダイアログを閉じる">&times;</button>
    <% end %>
  </header>
  <%= form_with **form_options do |f| %>
    <article class="dialog-component__body">
      <%= body %>
    </article>
    <footer class="dialog-component__footer">
      <% if footer %>
        <%= footer %>
      <% else %>
        <button class="dialog-component__button dialog-component__button--secondary" 
                type="submit" 
                formmethod="dialog" 
                formnovalidate 
                value="cancel"><%= cancel_text %></button>
        <button class="dialog-component__button dialog-component__button--primary" 
                type="submit" 
                autofocus><%= confirm_text %></button>
      <% end %>
    </footer>
  <% end %>
</dialog>
